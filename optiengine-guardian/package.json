{
    "name": "optiengine-guardian",
    "displayName": "OptiEngine Guardian",
    "description": "Real-time Senior-Level architectural guidance powered by OptiEngine MCP",
    "version": "0.1.0",
    "publisher": "optiengine",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "optiengine-guardian",
                    "title": "OptiEngine Guardian",
                    "icon": "$(shield)"
                }
            ]
        },
        "views": {
            "optiengine-guardian": [
                {
                    "type": "webview",
                    "id": "optiengine-guardian.panel",
                    "name": "Code Guardian",
                    "icon": "$(shield)",
                    "contextualTitle": "OptiEngine Guardian"
                }
            ]
        },
        "commands": [
            {
                "command": "optiengine-guardian.refresh",
                "title": "OptiEngine: Refresh Guardian",
                "icon": "$(refresh)"
            },
            {
                "command": "optiengine-guardian.clearPanel",
                "title": "OptiEngine: Clear Panel"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "optiengine-guardian.refresh",
                    "when": "view == optiengine-guardian.panel",
                    "group": "navigation"
                }
            ]
        },
        "configuration": {
            "title": "OptiEngine Guardian",
            "properties": {
                "optiengine.serverPath": {
                    "type": "string",
                    "default": "",
                    "description": "Absolute path to the contextengine directory"
                },
                "optiengine.pythonPath": {
                    "type": "string",
                    "default": "python3",
                    "description": "Python executable for the MCP server process"
                },
                "optiengine.debounceMs": {
                    "type": "number",
                    "default": 1500,
                    "description": "Milliseconds to debounce after file save before calling MCP"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.0.0"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/vscode": "^1.85.0",
        "typescript": "^5.3.0"
    }
}