{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "outDir": "./out",
        "rootDir": "./src",
        "lib": [
            "ES2020"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "out"
    ]
}